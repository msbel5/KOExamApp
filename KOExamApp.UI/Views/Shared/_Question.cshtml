
@model KOExamApp.BLL.Dtos.ExamDto
@{
    for (int i = 0; i < Model.Questions.Count; i++)
    {
        <div class="form-group grid-item">
            @Html.LabelFor(m => m.Questions[i].Query, (i + 1).ToString())
            @Html.TextBoxFor(m => m.Questions[i].Query, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Questions[i].Query)
            <div class="radio">
                @for (int j = 0; j < Model.Questions[i].Choices.Count; j++)
                {
                    @Html.Partial("_Choice", Model.Questions[i].Choices[j])
                }
            </div>
        </div>
        
    }
}